<body>
    <%- include('./partials/nav-f.ejs') %>
    
   <div class = "login-box">
        <center><h4 class = "login-box-text">SignUp</h4></center>
        <form action="/signup" method = "post">
            <label for="text" class="login-box-text">Choose your Username</label>
            <input type="text" name = "username">
            <br>
            <label for="text" class = "login-box-text">Choose your Password</label>
            <input type="password" name = "password" class = "password-holder">
            <br>
            <input type="submit" value = "SignUp" class = "login-btn btn btn-outline-primary">
            
        </form>
       
        <% if(message){ %>
            <h2 id="message" class = "message"><%= message %></h2>
            <% }else{ %>
            <h2 id="message"></h2>
 <% } %>
            <script>
                if(document.getElementById("message").innerText){
                    // console.log(document.getElementById("message").innerText)
                //   window.setTimeout(window.location.replace("/login"),3000)
                setTimeout(callBack_func, 3000);
                function callBack_func() {
                document.location.href = "/login";
                }    
            
            }
            </script>
   
        </div>
    
</body>
</html>
